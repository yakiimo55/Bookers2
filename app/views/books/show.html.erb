<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%#テンプレート呼び出し%>
      <%= render 'users/info', user: @user %>
      <%#本の投稿機能%>
      <%= render 'new', book: @new_book %>
    </div>
    
    <%#本の詳細画面 %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image(100,100) %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user == current_user %>   <!--if文はここでOK。テーブル内-->
              <td>
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success"  %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "Are you sure?" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>